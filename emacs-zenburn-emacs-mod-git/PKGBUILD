# Contributor: listdata <linusarver <at> gmail <dot> com>
pkgname=emacs-zenburn-emacs-mod-git
pkgver=20120521
pkgrel=1
_gitname="zenburn-emacs"
_gitnamebranch="zenburn-emacs-mod"
_gitroot="git://github.com/listx/$_gitname"
pkgdesc="$_gitname: a zenburn-like color theme for GNU Emacs "
arch=('any')
url="https://github.com/listx/$_gitname"
depends=('emacs<24' 'emacs-color-theme')
makedepends=('git')
license=('GPL')
install=$pkgname.install

build() {
  cd $srcdir

  if [[ -d $_gitnamebranch ]]; then
    cd $_gitnamebranch
    git clean -dxf
    git reset --hard
    msg "Pulling from GIT server..."
    git pull
  else
    git clone --depth 1 $_gitroot $_gitnamebranch
    cd $_gitnamebranch
    git pull --rebase
    git checkout mod
  fi
}

package() {
  # create destination path
  install -d $pkgdir/usr/share/emacs/site-lisp/$_gitnamebranch
  # copy over files into path
  cp $srcdir/$_gitnamebranch/*.el $pkgdir/usr/share/emacs/site-lisp/$_gitnamebranch
}
